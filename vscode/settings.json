{
	"workbench.colorTheme": "Catppuccin Mocha",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.sideBar.location": "right",
	"workbench.editor.showTabs": "multiple",
	"window.newWindowDimensions": "inherit",
	"workbench.tree.enableStickyScroll": true,
	"security.workspace.trust.untrustedFiles": "open",
	// Files
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.autoSave": "afterDelay",
	// Diff Editor
	"diffEditor.wordWrap": "on",
	"diffEditor.ignoreTrimWhitespace": false,
	"diffEditor.renderSideBySide": true,
	// Editor
	"editor.snippetSuggestions": "bottom",
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.copyWithSyntaxHighlighting": false,
    "editor.detectIndentation": false,
    "editor.guides.indentation": false,
	"editor.definitionLinkOpensInPeek": true,
	"editor.minimap.enabled": false,
	"editor.fontFamily": "Bedstead-Extended, CaskaydiaCoveNFM-Regular, FiraCodeNF-Reg",
    "editor.fontLigatures": true,
    "editor.codeLensFontFamily": "Bedstead-Extended",
	"editor.suggestFontSize": 16,
	"editor.suggestLineHeight": 30,
	"editor.linkedEditing": true,
	"editor.formatOnSave": false,
	"editor.fontSize": 16,
	"editor.minimap.maxColumn": 250,
	"editor.accessibilitySupport": "off",
	"editor.wordWrap": "on",
	"editor.fontWeight": "400",
	"editor.inlineSuggest.suppressSuggestions": true,
	"editor.padding.top": 16,
	"editor.cursorSmoothCaretAnimation": "explicit",
	"editor.cursorBlinking": "expand",
	"editor.stickyScroll.enabled": false,
	"editor.lineHeight": 24,
	// Terminal
	"terminal.integrated.gpuAcceleration": "on",
	"terminal.integrated.defaultProfile.linux": "zsh",
	"terminal.integrated.lineHeight": 1.1,
	"terminal.integrated.fontSize": 14,
    // Search
	"search.exclude": {
		// Hide everything in /vendor, except the "laravel" and "livewire" folder.
		"**/vendor/{[^l],?[^ai]}*": true,
		// Hide everything in /public, except "index.php"
		"**/public/{[^i],?[^n]}*": true,
		"**/node_modules": true,
		"**/dist": true,
		"**/_ide_helper.php": true,
		"**/composer.lock": true,
		"**/package-lock.json": true,
		"storage": true,
		".phpunit.result.cache": true
	},
	"material-icon-theme.saturation": 0,
	"material-icon-theme.files.color": "#42a5f5",

    // Customization++
	"apc.activityBar": {
		"position": "bottom",
		"itemSize": 30,
		"size": 35,
		"itemMargin": 5
	},
	"window.density.editorTabHeight": "compact",
	"apc.electron": {
		"opacity": 0.8,
		"backgroundColor": "#ffffff",
		"vibrancy": "ultra-dark",
		"backgroundMaterial": "acrylic",
		"titleBarStyle": "hiddenInset",
	},
	"apc.stylesheet": {
		// ".editor .scrollbar .slider": "visibility: hidden",
		// ".editor .scrollbar:hover .slider": "visibility: initial",
		".monaco-editor .scroll-decoration": "box-shadow: 0px 0px 20px rgba(0, 0, 0, .75) !important;top: -6px !important;",
		".part.sidebar": "box-shadow: 0px 0px 50px rgba(0, 0, 0, .25)",
		".monaco-workbench .part.editor>.content .editor-group-container>.title .editor-actions": "display: none",
		".monaco-workbench .part.sidebar .title-actions .actions-container": "display: none",
		".quick-input-widget": "transform: translateY(-50%) !important; top: 50% !important; box-shadow: 0px 8px 20px rgba(0, 0, 0, .45) !important; padding: 10px 10px 18px 10px !important; background-image: linear-gradient(#3c3c50 0%, #2a2b38 100%) !important; backdrop-filter: blur(3px) !important; border-radius: 20px !important;",
	},
	"apc.statusBar": {
		"fontSize": 12,
		"position": "editor-bottom",
		"height": 20,
    },
}
